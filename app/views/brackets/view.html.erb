<%content_for :title do%>View Bracket<%end%>
<h1 id="bracket_title">2020 College Basketball Bracket Challenge (<%=@bracket.user.pool_name%>)</h1>
<h4 id="bracket_group_title"><%=@bracket.user.first_name%> <%=@bracket.user.last_name%></h4>
<h4 id="bracket_group_title"><span class="badge points_badge"><%=@bracket_points%> points</span></h4>
<% if @potential_points == "N/A bracket not completely filled out" %>
      <h4 id="bracket_group_title"><span class="badge points_badge potential_points">No potential points, bracket not completely filled out</span></h4>
<% else %>
      <h4 id="bracket_group_title"><span class="badge points_badge potential_points"><%=@potential_points%> potential points remaining</span></h4>
<% end %>

<br>
<%= render "bracket" %>


